<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sp_bg"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.HomeActivity">

    <!-- App bar / toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sp_surface"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true"
        app:elevation="8dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:titleTextColor="@color/sp_text"
            app:title="SyncUp"
            app:menu="@menu/top_app_bar_menu"
            app:contentInsetStartWithNavigation="0dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="12dp"
        android:paddingBottom="88dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text=""
                tools:text="November 2025"
                android:textColor="@color/sp_text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- NEW: streak/goal chip -->
            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ 0 â€¢ Goal 3/day"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="4dp"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/sp_card"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/sp_border"
                app:strokeWidth="1dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weekList"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="8dp"
                    android:importantForAccessibility="no"
                    tools:listitem="@layout/item_week_day"/>
            </com.google.android.material.card.MaterialCardView>

            <include
                android:id="@+id/weatherCard"
                layout="@layout/view_weather_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/taskList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:importantForAccessibility="no"
                tools:listitem="@layout/item_task"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/sp_surface"
        app:itemIconTint="@color/sp_text"
        app:itemTextColor="@color/sp_text"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="22dp"
        app:itemHorizontalTranslationEnabled="false"
        app:menu="@menu/bottom_nav_menu"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add"
        android:src="@drawable/ic_add_24"
        app:backgroundTint="@color/sp_accent"
        app:tint="@color/sp_text"
        app:layout_anchor="@id/bottomNavigation"
        app:layout_anchorGravity="top|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
