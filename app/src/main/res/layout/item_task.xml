<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/sp_card"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/sp_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbDone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:buttonTint="@color/sp_accent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- ✅ Title id expected by TaskAdapter -->
            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish Wireframes"
                android:textColor="@color/sp_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- ✅ Tag/subtitle id expected by TaskAdapter -->
            <TextView
                android:id="@+id/tvTaskTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today · High"
                android:textColor="@color/sp_text_subtle"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
